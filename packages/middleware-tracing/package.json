{
  "name": "@saga-bus/middleware-tracing",
  "version": "0.1.4",
  "description": "OpenTelemetry tracing middleware for saga-bus",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/d-e-a-n-f/saga-bus.git",
    "directory": "packages/middleware-tracing"
  },
  "keywords": [
    "saga",
    "message-bus",
    "middleware",
    "tracing",
    "opentelemetry",
    "otel"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@saga-bus/core": "workspace:*"
  },
  "devDependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-trace-base": "^1.25.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.9.2",
    "vitest": "^3.0.0"
  },
  "peerDependencies": {
    "@opentelemetry/api": ">=1.0.0"
  }
}
