{
  "name": "@saga-bus/test",
  "version": "1.0.0",
  "description": "Testing utilities for saga-bus applications",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/deanforan/saga-bus.git",
    "directory": "packages/test"
  },
  "bugs": {
    "url": "https://github.com/deanforan/saga-bus/issues"
  },
  "homepage": "https://github.com/deanforan/saga-bus#readme",
  "keywords": [
    "saga",
    "message-bus",
    "testing",
    "test-harness"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@saga-bus/core": "workspace:*",
    "@saga-bus/transport-inmemory": "workspace:*",
    "@saga-bus/store-inmemory": "workspace:*"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.9.2",
    "vitest": "^3.0.0"
  },
  "peerDependencies": {
    "@saga-bus/core": ">=0.1.0"
  }
}
