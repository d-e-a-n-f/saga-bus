{
  "name": "@saga-bus/middleware-validation",
  "version": "0.2.0",
  "description": "Validation middleware for saga-bus message payload validation",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@saga-bus/core": "workspace:*"
  },
  "peerDependencies": {
    "zod": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.15.21",
    "tsup": "^8.0.0",
    "typescript": "^5.9.2",
    "vitest": "^3.0.0",
    "zod": "^3.24.0"
  },
  "keywords": [
    "saga",
    "saga-bus",
    "middleware",
    "validation",
    "zod",
    "schema",
    "event-sourcing"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/d-e-a-n-f/saga-bus.git",
    "directory": "packages/middleware-validation"
  },
  "bugs": {
    "url": "https://github.com/d-e-a-n-f/saga-bus/issues"
  },
  "homepage": "https://github.com/d-e-a-n-f/saga-bus#readme"
}
