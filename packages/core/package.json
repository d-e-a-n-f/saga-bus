{
  "name": "@saga-bus/core",
  "version": "0.1.2",
  "description": "Core types, DSL, and runtime for saga-bus message orchestration",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/d-e-a-n-f/saga-bus.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/d-e-a-n-f/saga-bus/issues"
  },
  "homepage": "https://github.com/d-e-a-n-f/saga-bus#readme",
  "keywords": [
    "saga",
    "message-bus",
    "orchestration",
    "state-machine",
    "typescript"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.9.2",
    "vitest": "^3.0.0"
  },
  "peerDependencies": {
    "typescript": ">=5.5.0"
  }
}
